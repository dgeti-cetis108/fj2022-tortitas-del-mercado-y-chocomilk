<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    android:stretchColumns="1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TableLayoutParchisActivity">
    <TableRow>
        <View
            android:layout_column="0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/amarillo_huevo"/>
        <Space android:layout_column="1"/>
        <View
            android:layout_column="2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/verde_limon"/>
    </TableRow>
    <TableRow>
        <Space android:layout_column="0"/>
        <View
            android:layout_column="1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/morado"/>
        <Space android:layout_column="2"/>
    </TableRow>
    <TableRow>
        <View
            android:layout_column="0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/azul_marino"/>
        <Space android:layout_column="1"/>
        <View
            android:layout_column="2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/rojo_sangre"/>
    </TableRow>
</TableLayout>